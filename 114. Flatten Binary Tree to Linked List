# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def flatten(self, root):
        """
        :type root: TreeNode
        :rtype: None Do not return anything, modify root in-place instead.
        """
        if not root:return 
        if root.right:
            self.flatten(root.right)
        if root.left:
            self.flatten(root.left)
        # self.move(root)
        if root.left:
            dummy = root.left
            while dummy.right:
                dummy = dummy.right
            dummy.right = root.right
            root.right = root.left
            root.left = None
        return
        
    # def move(self, root):
    #     if root.left:
    #         dummy = root.left
    #         while dummy.right:
    #             dummy = dummy.right
    #         dummy.right = root.right
    #         root.right = root.left
    #         root.left = None
    #     return
            
        
